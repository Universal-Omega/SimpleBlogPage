{
	"name": "SimpleBlogPage",
	"version": "3.0.0",
	"author": [
		"Universal Omega",
		"David Pean",
		"Jack Phoenix",
		"1f604"
	],
	"license-name": "GPL-3.0",
	"url": "https://www.mediawiki.org/wiki/Extension:SimpleBlogPage",
	"descriptionmsg": "simpleblogpage-desc",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"type": "other",
	"namespaces": [
		{
			"id": 500,
			"constant": "NS_USER_BLOG",
			"name": "User_blog",
			"protection": "edit",
			"subpages": true
		},
		{
			"id": 501,
			"constant": "NS_USER_BLOG_TALK",
			"name": "User_blog_talk",
			"subpages": true
		}
	],
	"config": {
		"SimpleBlogPageDisplay": {
			"value": {
				"leftcolumn": true,
				"rightcolumn": true,
				"author": true,
				"author_articles": true,
				"recent_editors": true,
				"recent_voters": true,
				"popular_articles": true,
				"in_the_news": true,
				"comments_of_day": false,
				"games": true,
				"new_articles": true
			}
		},
		"UserProfileDisplay": {
			"value": {
				"articles": true
			}
		}
	},
	"AutoloadClasses": {
		"SimpleBlogPage": "includes/SimpleBlogPage.class.php",
		"ArticlesHome": "includes/specials/SpecialArticlesHome.php",
		"BlogTagCloud": "includes/BlogTagCloud.class.php",
		"SpecialCreateBlogPost": "includes/specials/SpecialCreateBlogPost.php",
		"SimpleBlogPageHooks": "includes/SimpleBlogPage.hooks.php"
	},
	"AvailableRights": [
		"createblogpost"
	],
	"ExtensionMessagesFiles": {
		"SimpleBlogPageAlias": "includes/SimpleBlogPage.alias.php",
		"SimpleBlogPageNamespaces": "includes/SimpleBlogPage.namespaces.php"
	},
	"GroupPermissions": {
		"*": {
			"createblogpost": false
		},
		"user": {
			"createblogpost": true
		}
	},
	"Hooks": {
		"ArticleFromTitle": "SimpleBlogPageHooks::blogFromTitle",
		"AlternateEdit": "SimpleBlogPageHooks::allowShowEditSimpleBlogPage",
		"EditPage::showEditForm:initial": "SimpleBlogPageHooks::onEditPageshowEditForminitial"
	},
	"MessagesDirs": {
		"SimpleBlogPage": [
			"i18n"
		]
	},
	"ResourceModules": {
		"ext.blogPage": {
			"styles": [
				"resources/css/ext.blogpage.blogpage.css",
				"resources/css/ext.blogpage.hideContentsub.css"
			]
		},
		"ext.blogPage.articlesHome": {
			"styles": [
				"resources/css/ext.blogpage.articleshome.css",
				"resources/css/ext.blogpage.hideContentsub.css"
			]
		},
		"ext.blogPage.create.css": {
			"styles": [
				"resources/css/ext.blogpage.createblogpost.css"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "SimpleBlogPage"
	},
	"SpecialPages": {
		"ArticlesHome": "ArticlesHome",
		"CreateBlogPost": "SpecialCreateBlogPost"
	},
	"manifest_version": 2
}
